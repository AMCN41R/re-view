{
  "extends": [
    "tslint-react"
  ],
  "rules": {
    "class-name": true,
    "curly": true,
    "eofline": true,
    "trailing-comma": false,
    "no-debugger": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "prefer-const": true,
    "triple-equals": true,
    "no-conditional-assignment": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "interface-name": [
      true,
      "always-prefix"
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-template",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format"
    ],
    "max-line-length": [
      true,
      120
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "constructor"
        ]
      }
    ],
    "type-literal-delimiter": true,
    "jsx-ban-props": [
      true,
      [
        "dangerouslySetInnerHTML",
        "This is dangerous. It's in the name."
      ]
    ],
    "jsx-boolean-value": [
      "never"
    ],
    "jsx-space-before-trailing-slash": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "arrow-call-signature"
    ],
    "no-increment-decrement": false,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "jsx-curly-spacing": "always"
  }
}
